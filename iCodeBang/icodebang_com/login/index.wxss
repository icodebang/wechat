.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.footer {
  background-color: #aaa;
  height: 60rpx;
  width:100%;
  position: fixed;
  bottom: 0;
}

.navigator {
  margin-top: 200px;
}

.ora_header {
  width:100%;
}

.ora_logo {
  width: 160rpx;
  height: 160rpx;
  margin: 20rpx 20px 20px 40px;
}
.ora_welcome {
  font-family: "Microsoft Yahei","微软雅黑";
  line-height: 150rpx;
  font-size: 40rpx;
  vertical-align: middle;
}


.ora_container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 80rpx 0;
  box-sizing: border-box;
} 